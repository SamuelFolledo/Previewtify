  # Loading Indicators
  pod 'NVActivityIndicatorView'

  # For caching downloaded images
  pod 'Kingfisher', '~> 5.0'


  target 'PreviewtifyTests' do
    inherit! :search_paths
    # Pods for testing
  end

end
